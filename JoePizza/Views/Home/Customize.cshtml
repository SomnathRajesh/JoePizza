@model JoePizza.Models.Pizza;
@{
    ViewData["Title"] = "Customize";

}

@using JoePizza.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    List<Pizza> pizzas = HttpContextAccessor.HttpContext.Session.Get<List<Pizza>>("pizzas");
    Pizza pizzac = null;
    if (pizzas != null)
    {
        pizzac = pizzas.FirstOrDefault(c => c.Id == Model.Id);
    }

}

<br />
<h2 class="text-info" id="customize">Customize your Pizza</h2>
<form asp-action="Customize" method="post" enctype="multipart/form-data" asp-controller="Home">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="col-8">
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="PizzaName"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="PizzaName" readonly="readonly" class="form-control" id="@Model.PizzaName" />
                </div>
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group row mb-3">
                <div class="col-4">
                    <label>Toppings</label>
                </div>
                <div class="col-8">
                    <select asp-items="ViewBag.ToppingsId" class="form-control" name="topping"></select>
                    @* <input asp-for="Toppings" asp-items="" class="form-control" /> *@
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label>Sizes</label>
                </div>
                <div class="col-8">
                    <select asp-items="ViewBag.SizeId" class="form-control" name="size"></select>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label>Quantity</label>
                </div>
                <div class="col-8">
                    <input type="number" name="quantity"/>
                </div>
            </div>


            <div class="form-group row mb-3">
                <div class="col-4">
                </div>
                <div class="col-8">
                    
                        @if (pizzac != null)
                        {
                            <button type="submit" class="btn btn-danger form-control" asp-action="Remove" asp-route-id="@Model.Id">Remove from Cart</button>
                        }
                        else
                        {
                        <button type="submit" class="btn btn-primary form-control" id="Add To Cart">Add To Cart</button>
                        }

                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Image" width="100%" height="250px" style="border-radius:5px;border:1px solid #efefef" />
        </div>


    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




